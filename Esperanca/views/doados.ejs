<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Animais Adotados</title>
    <style>
        /* Reset básico de margens e paddings */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        /* Definições de cor de fundo e fonte */
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f8f8f8;
            color: #333;
            line-height: 1.6;
        }

        /* Header com fundo roxo e texto branco */
        header {
            background-color: #5e2a84; /* Roxo escuro */
            color: #fff;
            padding: 20px 0;
            text-align: center;
            font-family: 'Arial', sans-serif;
            font-weight: 600;
            text-transform: uppercase;
        }

        h1 {
            font-size: 2.5em;
            margin-top: 0;
            font-family: 'Helvetica', sans-serif; /* Fonte moderna */
            letter-spacing: 2px;
        }

        /* Link de Voltar para a página inicial */
        .back-link {
            display: block;
            text-align: center;
            margin-top: 20px;
            font-size: 1.2rem;
            color: #5e2a84;
            text-decoration: none;
        }

        .back-link:hover {
            text-decoration: underline;
        }

        /* Container principal para os animais */
        .container {
            width: 90%;
            max-width: 1200px;
            margin: 30px auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        /* Estilo para cada cartão de animal */
        .animal {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
            padding: 20px;
            background-color: #fff;
            border: 1px solid #e2e2e2;
            border-radius: 10px;
        }

        .animal img {
            width: 150px;
            height: 150px;
            object-fit: cover;
            border-radius: 8px;
            border: 2px solid #e2e2e2;
        }

        .animal-info {
            flex: 1;
            padding-left: 20px;
        }

        .animal-info h3 {
            font-size: 1.6em;
            color: #5e2a84; /* Roxo escuro */
            font-weight: 600;
            margin-bottom: 10px;
        }

        .animal-info p {
            font-size: 1.1em;
            color: #777;
            margin-bottom: 5px;
        }

        /* Estilo para a mensagem quando não há animais adotados */
        .no-animals {
            text-align: center;
            font-size: 1.2em;
            color: #777;
            padding: 20px;
        }

        /* Responsividade para telas menores */
        @media (max-width: 768px) {
            .animal {
                flex-direction: column;
                align-items: flex-start;
            }

            .animal img {
                width: 100%;
                margin-bottom: 15px;
            }

            .animal-info {
                padding-left: 0;
            }
        }
    </style>
</head>
<body>
    <header>
        <h1>Animais Adotados</h1>
    </header>

    <!-- Link de Voltar para a página inicial -->
    <a href="/home" class="back-link">Voltar para a página inicial</a>

    <div class="container">
        <% if (animais.length === 0) { %>
            <div class="no-animals">
                <p>Não há animais adotados no momento.</p>
            </div>
        <% } else { %>
            <% animais.forEach(animal => { %>
                <div class="animal">
                    <img src="/uploads/<%= animal.foto %>" alt="<%= animal.nome %>">
                    <div class="animal-info">
                        <h3><%= animal.nome %></h3>
                        <p>Idade: <%= animal.idade %> anos</p>
                        <p>Sexo: <%= animal.sexo %></p>
                        <p>Tipo: <%= animal.tipo %></p>
                    </div>
                </div>
            <% }); %>
        <% } %>
    </div>
</body>
</html>
